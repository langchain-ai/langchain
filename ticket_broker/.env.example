# Ticket Broker Optimization System - Environment Configuration
# Copy this file to .env and fill in your actual API keys and settings

# Database Configuration
DATABASE_URL=sqlite:///ticket_broker.db
REDIS_URL=redis://localhost:6379

# Spotify API Credentials
# Get these from: https://developer.spotify.com/
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# Twitter API Credentials
# Get these from: https://developer.twitter.com/
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here

# Ticketmaster API
# Get from: https://developer.ticketmaster.com/
TICKETMASTER_API_KEY=your_ticketmaster_api_key_here

# Google Trends (optional)
GOOGLE_TRENDS_API_KEY=your_google_trends_api_key_here

# Economic Data APIs (optional)
# FRED API: https://fred.stlouisfed.org/docs/api/
FRED_API_KEY=your_fred_api_key_here
# Alpha Vantage: https://www.alphavantage.co/
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Web Scraping Configuration
SELENIUM_WEBDRIVER_PATH=/usr/local/bin/chromedriver
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36

# Business Rules Configuration
MINIMUM_PROFIT_MARGIN=0.40
MAX_INVESTMENT_PER_EVENT=5000.0
MAX_TOTAL_INVENTORY_VALUE=50000.0

# Scoring Thresholds
HIGH_PROFIT_SCORE_THRESHOLD=15
MODERATE_PROFIT_SCORE_THRESHOLD=10
LOW_PROFIT_SCORE_THRESHOLD=5

# Data Refresh Intervals (in minutes)
SOCIAL_MEDIA_REFRESH_INTERVAL=60
BILLBOARD_REFRESH_INTERVAL=1440
ECONOMIC_DATA_REFRESH_INTERVAL=720

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=ticket_broker.log